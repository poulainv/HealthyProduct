<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/mainLinearLayout" >

    <TextView
        android:id="@+id/textView1"
        style="@style/infoTextView"
        android:text="@string/frag_choixprofil_welcome" />

    <RelativeLayout
        android:id="@+id/position_fleche"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/fleche_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/fleche"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/champNom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:hint="@string/frag_choixprofil_editNameHint"
            android:textColorHint="@color/white_text" >

            <requestFocus />
        </EditText>

    </RelativeLayout>

</LinearLayout>