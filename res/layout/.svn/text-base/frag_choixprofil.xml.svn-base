<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    style="@style/mainLinearLayout" >"

    <TextView
        android:id="@+id/textView1"
		style="@style/infoTextView"
        android:text="@string/frag_choixprofil" />

    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:weightSum="1" >

        <ToggleButton
            android:id="@+id/radioEconome"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:background="@drawable/profil_selector"
            android:textOff="@string/frag_choixprofil_econome"
            android:textOn="@string/frag_choixprofil_econome" />

        <ToggleButton
            android:id="@+id/radioEcofriend"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:background="@drawable/profil_selector"
            android:textOff="@string/frag_choixprofil_ecofriend"
            android:textOn="@string/frag_choixprofil_ecofriend" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:weightSum="1" >

        <ToggleButton
            android:id="@+id/radioFatWatcher"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:background="@drawable/profil_selector"
            android:textOff="@string/frag_choixprofil_fat"
            android:textOn="@string/frag_choixprofil_fat" />

        <ToggleButton
            android:id="@+id/radioQualite"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:background="@drawable/profil_selector"
            android:textOff="@string/frag_choixprofil_qualite"
            android:textOn="@string/frag_choixprofil_qualite" />
    </LinearLayout>
	<RelativeLayout 
	    android:id="@+id/position_fleche"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent" >
	<ImageView 
	    android:id="@+id/fleche_next"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/fleche"
        android:visibility="visible" />
	
	</RelativeLayout>"
</LinearLayout>