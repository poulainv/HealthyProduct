<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/mainLinearLayout"
    android:orientation="horizontal"
    android:weightSum="2" >

    <LinearLayout
        android:id="@+id/shareLayout"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2" >

        <EditText
            android:id="@+id/socialTextToShare"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="20dip"
            android:layout_weight="1"
            android:hint="@string/frag_social_shareText"
            android:textColorHint="@color/white_text"
            android:inputType="textMultiLine" >
        </EditText>

        <Button
            android:id="@+id/socialShareButton"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_gravity="center"
            android:layout_marginTop="20dip"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:text="@string/frag_social_doShareButton" >
        </Button>
    </LinearLayout>

    <ListView
        android:id="@+id/commentList"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:divider="#efefef"
        android:dividerHeight="1dip" >
    </ListView>

</LinearLayout>